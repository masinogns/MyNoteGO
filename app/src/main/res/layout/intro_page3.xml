<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">
        <!-- Image -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6">

            <ImageView
                android:id="@+id/arrowleft"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/arrow"
                android:rotation="-220"
                android:layout_width="55dp"
                android:layout_height="55dp"/>
            <ImageView
                android:id="@+id/smartphoneleft"
                android:src="@drawable/smartphone6"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <ImageView
                android:id="@+id/arrowright"
                android:layout_alignLeft="@+id/smartphoneright"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="-30dp"
                android:src="@drawable/arrow"
                android:rotation="-145"
                android:layout_width="55dp"
                android:layout_height="55dp"/>
            <ImageView
                android:id="@+id/smartphoneright"
                android:src="@drawable/smartphone3"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/envelope"
                android:src="@drawable/envelope"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignBottom="@+id/arrowleft"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="33dp" />
        </RelativeLayout>
        <!-- Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLargeInverse"
                android:textStyle="italic|bold"
                android:text="Anywhere !!" />
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:textAppearanceMediumInverse"
                android:textStyle="bold"
                android:text="Write your Message anywhere\nRead Message of others its location."/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>